<div class="container">
  <div class="row">
    <div class="col-md-12">
      <p id="notice"><%= notice %></p>

      <h1>Capítulos</h1>

      <table class="table table-spriped">
        <thead>
          <tr>
            <th>Título</th>
            <th>Número</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @chapters.each do |chapter| %>
          <tr>
            <td><%= chapter.title %></td>
            <td><%= chapter.number %></td>
            <td><%= link_to 'Ver', chapter %></td>
            <td><%= link_to 'Editar', edit_chapter_path(chapter) %></td>
            <td><%= link_to 'Eliminar', chapter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Chapter', new_chapter_path %>
    </div>
  </div>
</div>
