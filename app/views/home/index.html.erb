<div class="container">
  <div class="row">
    <% @courses.each do |course| %>
      <div class="col-md-4">
        <div class="thumbnail">
          <%= image_tag course.image.url(:large), class:"img img-responsive" %>
          <div class="caption">
            <h3><%= course.title %></h3>
            <p><%= course.about.truncate(100) %></p>
            <p class="text-right">
              <%= link_to "Ver", course, class:"btn btn-default" %>
              <a href="#" class="btn btn-primary">Inscribir</a>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
